{
  "name": "@simoko/tw-zip",
  "version": "0.0.2",
  "description": "taiwan zip code",
  "author": "Supra <supra126@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simoko-dev/tw-zip"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "browser": "./dist/index.global.js"
    },
    "./react": {
      "require": "./dist/react.js",
      "import": "./dist/react.mjs",
      "browser": "./dist/react.global.js"
    },
    "./vue": {
      "require": "./dist/vue.js",
      "import": "./dist/vue.mjs",
      "browser": "./dist/vue.global.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsup",
    "test": "vitest",
    "lint": "eslint .",
    "release": "npx bumpp && npm publish",
    "typecheck": "tsc --noEmit",
    "doc": "rimraf docs && typedoc --plugin typedoc-plugin-markdown"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@types/node": "^18.15.12",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsdoc-markdown": "^0.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4",
    "vitest": "^0.34.6",
    "vue": "^3.3.6"
  }
}
